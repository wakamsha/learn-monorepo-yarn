{
  "name": "learn-monorepo-yarn",
  "version": "1.0.0",
  "author": "wakamsha <wakamsha@gmail.com>",
  "license": "UNLICENSED",
  "private": true,
  "engines": {
    "node": "18.13.0",
    "yarn": "3.4.1",
    "npm": "please_use_yarn_instead"
  },
  "packageManager": "yarn@3.4.1",
  "workspaces": [
    "packages/*"
