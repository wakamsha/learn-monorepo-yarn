{
  "name": "@learn-monorepo-yarn/app",
  "version": "1.0.0",
  "packageManager": "yarn@3.4.1",
  "scripts": {
    "type-check": "run -T tsc --noEmit",
    "reset": "rm -rf ./.next && rm -rf ./out",
    "dev": "next dev",
    "start": "reset && run -T run-p \"type-check --watch\" \"dev\"",
    "build": "reset && next build && next export"
  },
  "dependencies": {
    "@learn-monorepo-yarn/core": "1.0.0",
    "next": "13.1.6",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@types/node": "18.11.19",
    "@types/react": "18.0.27",
    "@types/react-dom": "18.0.10"
  }
}
